namespace basilcc {

class AbstractNode {
  public:
    AbstractNode() {}
    virtual ~AbstractNode() {}
};

class Token : public AbstractNode {
  public:
    inline Token(int num, Loc const &loc, std::string const &lexeme)
        : num(num), loc(loc), lexeme(lexeme) {}
    ~Token() {}
    int num;
    Loc loc;
    std::string lexeme;
};

} // basilcc

